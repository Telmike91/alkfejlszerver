{% extends 'layout' %}

{% block content%}
{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}
    <table class="table table-hover">
        <thead>
            <th>Name</th>
            <th></th>
        </thead>
        {% for player in players %}
        <form method="POST">
            {{ csrfField}}
        <tr>
            <td>{{ player.username }}</td>          
            <input type="hidden" value={{player.username}} name="username" />  
            <td><button type="submit" class="btn btn-primary">Invite</button></td>
        </tr>
        </form>
        {% endfor %}
    </table>
{% endblock %}
