{% extends 'layout' %}

{% block content %}
<h2>Invites</h2>
<table class="table table-hover table-striped">
    <thead>
        <th>Clan</th>
        <th></th>
    </thead>
{% for invite in invites %}
    <tr>
        <td>{{ invite.clan_name }}</td>
        <form method="POST">
            {{ csrfField }}
            <td>   
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-1">
                        <input type="hidden" name="clan_name" value={{invite.clan_name}} />
                        <button type="submit" class="btn btn-primary">Accept</button>
                    </div>
                </div>
            </td>
        </form>
    </tr>
{% endfor %}
</table>
{% endblock %}