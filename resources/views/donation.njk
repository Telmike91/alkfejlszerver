{% extends 'layout' %}

{% block content %}

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

{% if player.clan_name == clan.clan_name %}
    Your gold amount : {{ player.gold }}
<form name = "test" method="POST">
    {{ csrfField }}
    <input required type = "number" name = "donation" min = "0" max = {{player.gold}} step="1" />
    <input type = "submit" value = "Donate" />
</form>
{% else %}
    <p>You are not a member of the clan!</p>
{% endif %}
{% endblock %}