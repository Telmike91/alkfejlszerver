{% extends 'layout' %}

{% block styles %}
    <link href="/money.css" rel='stylesheet' type='text/css'>
{% endblock %}

{% block content %}

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

{% if player.clan_name == clan.clan_name %}
    <p>Your gold amount : <span id="gold">{{ player.gold }}</span> <span class="expense" id="newGold"></span></p>
<form name = "test" method="POST">
    {{ csrfField }}
    <input required type = "number" name = "donation" min = "0" max = {{player.gold}} step="1" />
    <input class="btn" type = "submit" value = "Donate" />
</form>
{% else %}
    <p>You are not a member of the clan!</p>
{% endif %}
{% endblock %}

{% block scripts %}
  <script src="/scripts/donate.js"></script>
{% endblock %}