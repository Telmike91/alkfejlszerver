{% extends 'layout' %}

{% block content %}

<div style="float:left" class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">You</h3>
    </div>
    <div class="panel-body">
        <p>Strength : {{ player.STR }}</p>
        <p>Vitality : {{ player.VIT }}</p>
        <p>Luck : {{ player.LCK }}</p>
        <table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Strengt</th>
      <th>Vitality</th>
      <th>Luck</th>
    </tr>
  </thead>
  <tbody>
    {% for item in items %}
    <tr>
      <td>{{ item.item_name }}</td>
      <td>{{ item.STR }}</td>
      <td>{{ item.VIT }}</td>
      <td>{{ item.LCK }}</td>
      <td>Use</td>
    </tr>
    {% endfor %}
  </tbody>
</table> 
    </div>
</div>
<div style="float:right" class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">{{ battle.enemy_name }}</h3>
    </div>
    <div class="panel-body">
        <p>Strength : {{ battle.STR }}</p>
        <p>Vitality : {{ battle.VIT }}</p>
        <p>Luck : {{ battle.LCK }}</p>
    </div>
</div>
<form method="POST">
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-5">
        <button type="submit" class="btn btn-primary">Battle</button>
    </div>
</form>
{% endblock %}